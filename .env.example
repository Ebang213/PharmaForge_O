# PharmaForge OS Environment Variables
# Copy this file to .env and configure as needed

# Application
SECRET_KEY=change-me-in-production-use-strong-random-key
DEBUG=false

# Database (for local development without Docker)
DATABASE_URL=postgresql://pharmaforge:pharmaforge@localhost:5432/pharmaforge

# Redis (for local development without Docker)
REDIS_URL=redis://localhost:6379/0

# Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333

# LLM Provider (mock, openai, or anthropic)
LLM_PROVIDER=mock

# OpenAI (optional - for Copilot with real LLM)
OPENAI_API_KEY=

# Anthropic (optional - for Copilot with Claude)
ANTHROPIC_API_KEY=

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:8001,http://localhost:3000
