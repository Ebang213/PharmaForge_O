# PharmaForge OS - Production Environment Variables
# Copy this to .env and configure all required values

# =========================================
# REQUIRED - Security Settings
# =========================================

# JWT secret key - MUST be a random string of at least 64 characters
# Generate with: openssl rand -hex 32
SECRET_KEY=your-64-character-random-secret-key-here

# Initial admin account - used only on first startup with empty database
# Password must be at least 10 characters
ADMIN_BOOTSTRAP_EMAIL=admin@yourcompany.com
ADMIN_BOOTSTRAP_PASSWORD=CHANGE-ME-strong-password-here

# =========================================
# Database Credentials
# =========================================
# ⚠️ IMPORTANT: Changing POSTGRES_PASSWORD after initial deployment
# does NOT update the existing postgres_data volume!
# 
# If you need to change the password:
#   - Development: Run `.\scripts\reset-db.ps1` (destroys data)
#   - Production: Run `.\scripts\rotate-db-password.ps1` (preserves data)
# =========================================

POSTGRES_USER=pharmaforge
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=pharmaforge

# =========================================
# Auth Settings
# =========================================

# NEVER set to true in production!
SEED_DEMO=false

# Disable public registration (users must be created by admin)
ALLOW_PUBLIC_REGISTRATION=false

# JWT token expiry in minutes (default: 30 = 30 minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =========================================
# Optional - LLM Providers
# =========================================

LLM_PROVIDER=mock
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# =========================================
# Optional - Application Settings
# =========================================

VERSION=1.0.0
DEBUG=false
HTTP_PORT=80
